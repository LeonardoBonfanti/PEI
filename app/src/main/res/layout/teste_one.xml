<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myRelativeOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextResposta"
        android:inputType="textNoSuggestions|textCapCharacters"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="RESPOSTA"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/imageTest"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageTest"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/btnok"
        android:layout_below="@+id/editTextResposta"
        android:layout_toRightOf="@+id/btnMiddle"/>

    <Button
        android:id="@+id/btnMiddle"
        android:layout_width="50px"
        android:layout_height="200px"
        android:alpha="0"
        android:background="@drawable/btnok"
        android:layout_below="@+id/editTextResposta"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/btncancel"
        android:layout_below="@+id/editTextResposta"
        android:layout_toLeftOf="@+id/btnMiddle"/>
</RelativeLayout>