<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myRelativeTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/imgTesteAudio"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginTop="23dp"
        android:background="@drawable/imgaudio"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextRespostaTwo"
        android:inputType="textNoSuggestions|textCapCharacters"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="____________"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/imgTesteAudio"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnOkTesteTwo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/btnok"
        android:layout_below="@id/editTextRespostaTwo"
        android:layout_toRightOf="@+id/btnMiddle2"/>

    <Button
        android:id="@+id/btnMiddle2"
        android:layout_width="50px"
        android:layout_height="200px"
        android:alpha="0"
        android:background="@drawable/btnok"
        android:layout_below="@+id/editTextRespostaTwo"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCancelTesteTwo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/btncancel"
        android:layout_below="@id/editTextRespostaTwo"
        android:layout_toLeftOf="@+id/btnMiddle2"/>
</RelativeLayout>